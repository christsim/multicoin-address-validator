    "crc": "^3.8.0",
    "jssha": "2.3.1"
  },
  "devDependencies": {
    "browserify": "^16.5.0",
    "chai": "^4.2.0",
    "karma": "^4.4.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^1.3.0",
    "mocha": "^7.0.0",
    "uglify-es": "^3.3.9"
  }
