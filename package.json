    "ada",
    "btc",
    "bitcoin",
    "bitcoin cash",
    "litecoin",
    "decred",
    "dogecoin",
    "ethereum",
    "ripple",
    "dash",
    "neo",
    "gas",
    "komodo",
    "zcash",
    "qtum",
    "trx",
    "nem",
    "waves",
